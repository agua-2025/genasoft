root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.cs]
indent_size = 4
dotnet_diagnostic.IDE0055.severity = silent

[*.csproj]
indent_size = 2

[*.{json,yml,yaml,md}]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

[*.{ps1,psm1}]
indent_size = 4

[*.sln]
indent_style = tab
indent_size = 4
